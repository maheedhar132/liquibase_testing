def yamlInput
pipeline{
agent any
stages{
    stage('read yaml'){
        steps{
            script{
            yamlInput = readYaml file: "${WORKSPACE}/input.yaml"
            echo "Yamlfile: " + yamlInput
            }
    }
    }
    stage('Deployment'){
        steps{
            script{
                if ((env.Environment == "prod")){
                    print("This step clones MASTER barnch and is a prod deployment")
                }
                else if (env.Environment == "uat" || "qa"){
                    print("This step clones DEVELOP branch and is a dev/qa deployment")
                }
                else{
                    print('This is a dev deployment')
                }
            }
        }
    }
}
}
