def yamlInput
def approval
def secretPath
def skip
pipeline{
agent any
stages{
    stage('read yaml'){
        steps{
            script {
            yamlInput = readYaml file: "${WORKSPACE}/input.yaml"
            approval = yamlInput.env_prop."${env.environmentName}".approval
            secretPath = yamlInput.env_prop."${env.environmentName}".secretPath
            print(approval)
            print(secretPath)
            }
    }
    }
    stage('test yaml'){
        steps{
            echo "This is step-2"
        }
    }
}
}